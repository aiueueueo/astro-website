---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import RelatedArticles from '../../components/blog/RelatedArticles.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import MobileTableOfContents from '../../components/MobileTableOfContents.astro';
import SocialShare from '../../components/SocialShare.astro';
import StructuredData from '../../components/StructuredData.astro';
import '../../styles/global.css';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content, headings } = await post.render();

// 静的サイト生成ではサーバーサイドでURLパラメータを取得できないため
// クライアントサイドで処理する

function formatDate(date: Date) {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout 
  title={`${post.data.title} - aiueueue's blog`} 
  description={post.data.description}
  image={post.data.heroImage}
  article={true}
>
  <StructuredData type="article" post={post} />
  <Header currentPage="blog" />
  
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Back to Blog Link - Top Left -->
    <div class="mb-6">
      <a 
        href="/blog/"
        class="back-to-blog-link inline-flex items-center text-sm text-retro-green dark:text-retro-green hover:text-retro-green-hover dark:hover:text-retro-green-hover transition-colors"
      >
        ← すべての記事に戻る
      </a>
    </div>

    <!-- Hero Section - Centered -->
    <div class="max-w-4xl mx-auto mb-8 flex justify-center">
      <div class="w-full max-w-3xl">
      <!-- Hero Image -->
      {post.data.heroImage && (
        <div class="flex justify-center mb-6">
          <div class="aspect-[16/9] max-h-96 overflow-hidden rounded-lg">
            <img 
              src={post.data.heroImage} 
              alt={post.data.title}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      )}
      
      <!-- Article Header -->
      <header>
        
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-retro-text mb-4 text-left">
          {post.data.title}
        </h1>
        
        <div class="flex items-center justify-start gap-4 text-sm text-gray-600 dark:text-retro-text/80 mb-4">
          <span>
            作成日: <time datetime={post.data.pubDate.toISOString()}>
              {formatDate(post.data.pubDate)}
            </time>
          </span>
          {post.data.updatedDate && (
            <span>
              更新日: <time datetime={post.data.updatedDate.toISOString()}>
                {formatDate(post.data.updatedDate)}
              </time>
            </span>
          )}
        </div>
        
        <!-- Tags -->
        {post.data.tags.length > 0 && (
          <div class="flex flex-wrap justify-start gap-2 mb-6">
            {post.data.tags.map((tag) => (
              <a 
                href={`/search?q=${encodeURIComponent(tag)}`}
                class="inline-block px-3 py-1 text-sm bg-retro-green/10 dark:bg-retro-green/20 text-retro-green dark:text-retro-green rounded-full hover:bg-retro-green/20 dark:hover:bg-retro-green/30 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
      </header>
      </div>
    </div>

    <!-- Mobile Table of Contents - Only show on mobile/tablet -->
    <div class="lg:hidden">
      <MobileTableOfContents headings={headings} />
    </div>

    <!-- Content with Desktop TOC -->
    <div class="flex gap-8 items-start">
      <!-- Article Content -->
      <article class="flex-1 prose prose-lg max-w-none min-w-0">
        <div class="prose dark:prose-invert max-w-none leading-relaxed">
          <Content />
        </div>
      </article>
      
      <!-- Desktop Table of Contents - Only show on desktop -->
      <aside class="hidden lg:block w-64 flex-shrink-0 self-start sticky top-32">
        <TableOfContents headings={headings} />
      </aside>
    </div>

    <!-- Social Share Section -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
      <div class="text-right">
        <p class="text-sm text-gray-600 dark:text-retro-text/70 mb-4">この記事をシェア</p>
        <div class="flex justify-end">
          <SocialShare 
            title={post.data.title}
            url={`${Astro.site}/blog/${post.slug}/`}
            description={post.data.description}
            iconsOnly={true}
          />
        </div>
      </div>
    </div>
    
    <!-- Related Articles -->
    <RelatedArticles currentPost={post} maxResults={3} useAdvanced={true} />
    
    <!-- Navigation -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
      <div class="flex justify-center">
        <a 
          href="/blog/"
          class="back-to-blog-link inline-flex items-center text-retro-green dark:text-retro-green hover:text-retro-green-hover dark:hover:text-retro-green-hover transition-colors"
        >
          ← すべての記事に戻る
        </a>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

<script>
  // クライアントサイドでURLパラメータを処理
  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const fromPage = urlParams.get('from');
    
    if (fromPage && fromPage !== '1') {
      const backUrl = `/blog/page/${fromPage}/`;
      const backLinks = document.querySelectorAll('.back-to-blog-link');
      backLinks.forEach(link => {
        if (link instanceof HTMLAnchorElement) {
          link.href = backUrl;
        }
      });
    }
  });
</script>

<style>
  /* プログコードブロックのスタイリング */
  .prose :global(pre) {
    @apply bg-gray-900 dark:bg-gray-800 text-gray-100 rounded-lg p-4 overflow-x-auto;
  }
  
  .prose :global(code) {
    @apply bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-retro-text px-1 py-0.5 rounded text-sm;
  }
  
  .prose :global(pre code) {
    @apply bg-transparent text-gray-100 p-0;
  }
  
  /* 見出しデザイン */
  .prose :global(h1) {
    @apply text-3xl font-bold text-gray-900 dark:text-retro-text mt-8 mb-4 pb-2 border-b-2 border-retro-red;
  }
  
  .prose :global(h2) {
    @apply text-2xl font-semibold text-gray-900 dark:text-retro-text mt-8 mb-4 pb-2 border-b border-gray-300 dark:border-gray-600;
  }
  
  .prose :global(h3) {
    @apply text-xl font-semibold text-gray-800 dark:text-retro-text mt-6 mb-3 pl-4 border-l-4 border-gray-400 dark:border-gray-500;
  }
  
  .prose :global(h4) {
    @apply text-lg font-medium text-gray-800 dark:text-retro-text mt-6 mb-3;
  }
  
  .prose :global(h5) {
    @apply text-base font-medium text-gray-700 dark:text-retro-text mt-4 mb-2;
  }
  
  .prose :global(h6) {
    @apply text-sm font-medium text-gray-600 dark:text-retro-text/80 mt-4 mb-2;
  }

  /* ダークモード対応 */
  :global(.dark) .prose {
    @apply text-retro-text;
  }
  
  :global(.dark) .prose :global(a) {
    @apply text-retro-green hover:text-retro-green-hover;
  }
  
  :global(.dark) .prose :global(blockquote) {
    @apply border-gray-600 text-retro-text/80;
  }
</style>
