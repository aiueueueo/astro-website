---
export interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;
---

<header class="sticky top-0 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center h-16">
      <!-- Left: Mobile Hamburger + Blog Name -->
      <div class="flex items-center flex-1">
        <!-- Mobile: Hamburger Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors mr-3"
