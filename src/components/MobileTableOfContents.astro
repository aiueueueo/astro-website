---
export interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
}

const { headings } = Astro.props;
const filteredHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <div class="mb-6">
    <details class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
      <summary class="p-4 cursor-pointer font-medium text-gray-900 dark:text-retro-text hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
        目次 ({filteredHeadings.length}項目)
      </summary>
      <nav class="px-4 pb-4">
        <ul class="space-y-2">
          {filteredHeadings.map((heading) => (
            <li>
              <a 
                href={`#${heading.slug}`} 
                class="block py-2 text-sm text-gray-600 dark:text-retro-text/80 hover:text-retro-green dark:hover:text-retro-green transition-colors"
                onclick="this.closest('details').removeAttribute('open')"
              >
                <span class={heading.depth === 3 ? 'ml-4' : ''}>
                  {heading.text}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </details>
  </div>
)}
