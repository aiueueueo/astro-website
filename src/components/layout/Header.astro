---
import MobileMenu from './MobileMenu.astro';
import ThemeToggle from '../ThemeToggle.astro';
import SearchBox from '../SearchBox.astro';
import SocialLinks from '../SocialLinks.astro';
import { getNavLinkClasses } from '../../lib/utils';
import { SITE_CONFIG } from '../../lib/constants';
import type { NavItem } from '../../types';

export interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;

// ナビゲーションアイテムの定義（設定から分離可能）
const navigationItems: NavItem[] = [
  // Blogリンクを削除
];

// ナビゲーションリンクのクラスを生成
const getNavItemClasses = (href: string) => {
  const page = href.slice(1); // "/blog" → "blog"
  return getNavLinkClasses(currentPage, page);
};

// ホームリンクのクラス
const homeLinkClasses = getNavLinkClasses(
  currentPage, 
  'home',
  'text-xl font-bold transition-colors tracking-tight',
  'text-retro-green dark:text-retro-green',
  'text-gray-900 dark:text-retro-text hover:text-retro-green dark:hover:text-retro-green-hover'
);
---

<header class="fixed w-full top-0 z-50 transition-all duration-300" id="main-header">
  <div class="absolute inset-0 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200/50 dark:border-gray-800/50 shadow-sm supports-[backdrop-filter]:bg-white/60 dark:supports-[backdrop-filter]:bg-gray-900/60"></div>
  
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Left: Mobile Menu + Blog Name -->
      <div class="flex items-center gap-4">
        <MobileMenu currentPage={currentPage} />
        
        <!-- Blog Name/Logo -->
        <a 
          href="/" 
          class={homeLinkClasses}
          aria-label={`${SITE_CONFIG.TITLE} ホームページ`}
        >
          {SITE_CONFIG.TITLE}
        </a>
      </div>
      
      <!-- Center: Desktop Navigation (Empty for now but ready) -->
      <nav 
        class="hidden md:flex items-center space-x-8"
        aria-label="メインナビゲーション"
      >
        {navigationItems.map((item) => (
          <a 
            href={item.href} 
            class={getNavItemClasses(item.href)}
            aria-label={`${item.label}ページへ移動`}
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <!-- Right: Search, Theme Toggle & Social Links -->
      <div class="flex items-center gap-3">
        <SearchBox />
        <div class="w-px h-6 bg-gray-200 dark:bg-gray-700 mx-1"></div>
        <ThemeToggle />
        <SocialLinks />
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16 md:h-20"></div>

<style>
  /* アクセシビリティ: フォーカス表示の改善 */
  nav a:focus {
    outline: 2px solid currentColor;
    outline-offset: 4px;
    border-radius: 4px;
  }
  
  /* スクロール時のスタイル変更（必要に応じてJSでクラス付与） */
  /* :global(.scrolled) header { ... } */
</style>