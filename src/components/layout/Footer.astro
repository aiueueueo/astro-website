---
import { SITE_CONFIG } from '../../lib/constants';

// 現在の年を取得
const currentYear = new Date().getFullYear();

// 著作権表記（設定から動的生成）
const copyrightText = SITE_CONFIG.COPYRIGHT.replace('2024', currentYear.toString());
---

<footer class="bg-white dark:bg-[#222222] border-t border-gray-200 dark:border-white/10 mt-auto">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row justify-center items-center gap-4 text-sm text-gray-500 dark:text-retro-text/60">
      <span>{copyrightText}</span>
      <span class="hidden md:inline text-gray-300 dark:text-retro-text/40">•</span>
      <span>
        Built with <a href="https://astro.build" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium">Astro</a>
      </span>
    </div>
  </div>
</footer>