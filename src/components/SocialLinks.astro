---
import TwitterIcon from './icons/TwitterIcon.astro';
import GitHubIcon from './icons/GitHubIcon.astro';
---

<div class="flex items-center space-x-2">
  <a 
    href="https://x.com/aiueueueo" 
    target="_blank" 
    rel="noopener noreferrer"
    class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
    aria-label="Twitter"
  >
    <TwitterIcon class="w-5 h-5" />
  </a>
  <a 
    href="https://github.com/aiueueueo" 
    target="_blank" 
    rel="noopener noreferrer"
    class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
    aria-label="GitHub"
  >
    <GitHubIcon class="w-5 h-5" />
  </a>
</div>