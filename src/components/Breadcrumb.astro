---
export interface BreadcrumbItem {
  label: string;
  href?: string;
}

export interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="パンくずリスト" class="mb-8">
  <ol class="flex flex-wrap items-center text-sm text-gray-500 dark:text-gray-400 leading-none">
    {items.map((item, index) => (
      <li class="flex items-center my-1">
        {index > 0 && (
          <span class="mx-3 text-gray-300 dark:text-gray-600 select-none">/</span>
        )}
        {item.href ? (
          <a 
            href={item.href} 
            class="hover:text-gray-900 dark:hover:text-white transition-colors"
          >
            {item.label}
          </a>
        ) : (
          <span class="text-gray-900 dark:text-white font-medium" aria-current="page">
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>