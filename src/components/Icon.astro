---
export interface Props {
  name: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { name, class: className = '', size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6'
};

const iconClass = `${sizeClasses[size]} ${className}`;
---

